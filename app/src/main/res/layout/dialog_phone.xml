<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="500dp"
    android:layout_height="600dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="09"
            android:id="@+id/tv_CellPhoneNumber"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:textSize="60dp"
            android:gravity="center" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:id="@+id/btn_Del"
            android:background="@drawable/btn_green"
            android:layout_weight="1"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM1" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM2" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM4" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM5" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM7" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM8" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM9" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:text="*"
            android:enabled="false" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:id="@+id/btn_NUM0" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_yellow"
            android:layout_weight="1"
            android:text="#"
            android:enabled="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="清除"
            android:id="@+id/btn_Clear"
            android:background="@drawable/btn_red"
            android:enabled="true"
            android:layout_weight="1" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="確認"
            android:id="@+id/btn_Enter"
            android:background="@drawable/btn_blue"
            android:enabled="true"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>