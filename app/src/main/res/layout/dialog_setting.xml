<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="店名"
            android:id="@+id/textView"
            android:textSize="35sp"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sp_StoreName"
            android:layout_weight="2"
            android:spinnerMode="dropdown" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="刪除"
            android:id="@+id/btn_StoreDel"
            android:textSize="35sp"
            android:background="@drawable/btn_red" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="新增"
            android:id="@+id/btn_StoreAdd"
            android:textSize="35sp"
            android:background="@drawable/btn_blue" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分店"
            android:id="@+id/textView6"
            android:textSize="35sp"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sp_AreaName"
            android:layout_weight="2"
            android:spinnerMode="dropdown" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="刪除"
            android:id="@+id/btn_AreaDel"
            android:textSize="35sp"
            android:background="@drawable/btn_red" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="新增"
            android:id="@+id/btn_AreaAdd"
            android:textSize="35sp"
            android:background="@drawable/btn_blue" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日營業額"
            android:id="@+id/textView7"
            android:textSize="35sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_DayVolume"
            android:textSize="35sp"
            android:layout_weight="2"
            android:gravity="center" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="選擇"
            android:id="@+id/btn_DayPicker"
            android:textSize="35sp"
            android:background="@drawable/btn_purple" />

        <Button
            style="@style/ButtonText"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:text="查詢"
            android:id="@+id/btn_DaySearch"
            android:textSize="35dp"
            android:background="@drawable/btn_green" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="月營業額"
            android:id="@+id/textView4"
            android:textSize="35dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_MonthVolume"
            android:textSize="35dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textIsSelectable="false" />

        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="選擇"
            android:id="@+id/btn_MonthPicker"
            android:textSize="35dp"
            style="@style/ButtonText"
            android:background="@drawable/btn_purple" />

        <Button
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_MonthSearch"
            android:textSize="35dp"
            android:background="@drawable/btn_green"
            style="@style/ButtonText"
            android:text="查詢" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="員工紀錄"
            android:id="@+id/textView3"
            android:textSize="35dp"
            android:gravity="center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sp_Employee"
            android:layout_weight="2"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_RecordMonth"
            android:textSize="35dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textIsSelectable="false" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="選擇"
            android:id="@+id/btn_RecordMonthPicker"
            android:textSize="35dp"
            android:background="@drawable/btn_purple" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_RecordSearch"
            android:textSize="35dp"
            android:background="@drawable/btn_green"
            android:text="查詢" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="新增"
            android:id="@+id/button"
            android:textSize="35dp"
            android:background="@drawable/btn_blue" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="出單機(TP260)"
            android:id="@+id/cb_TicketEnable"
            android:textSize="35dp"
            android:checked="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_TicketIP"
            android:layout_weight="1"
            android:textSize="35dp"
            android:layout_marginLeft="25dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="貼紙機(PL3150)"
            android:id="@+id/cb_StickEnable"
            android:textSize="35dp"
            android:checked="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_StickIP"
            android:layout_weight="1"
            android:textSize="35dp"
            android:layout_marginLeft="25dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rg_StickType">

            <RadioButton
                android:text="TP260"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:text="GoDEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="價格分類顯示(超出一頁)"
            android:id="@+id/cb_PriceDiv"
            android:textSize="35dp"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="每行顯示數量"
            android:id="@+id/textView2"
            android:textSize="35dp"
            android:gravity="center_vertical"
            android:layout_marginRight="50dp" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/btn_PageNumDown"
            android:layout_weight="1"
            android:textSize="35dp"
            android:background="@drawable/btn_purple" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_PageNum"
            android:layout_weight="1"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center" />

        <Button
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/btn_PageNumUp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:background="@drawable/btn_purple" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@integer/dialog_setting_line_height"
        android:gravity="right">

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="進階管理功能"
            android:id="@+id/btn_MoreSetting"
            android:textSize="35dp"
            style="@style/ButtonText"
            android:background="@drawable/btn_deepblue" />

        <Button
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="儲存"
            android:id="@+id/btn_Save"
            android:textSize="35dp"
            android:background="@drawable/btn_yellow" />

        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="離開"
            android:id="@+id/btn_Exit"
            android:textSize="35dp"
            style="@style/ButtonText"
            android:background="@drawable/btn_red" />
    </LinearLayout>

</LinearLayout>